generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  user
  model
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  RARELY
}

enum SymptomName {
  HEADACHE
  NAUSEA
  VOMITING
  DIARRHEA
  FATIGUE
  DIZZINESS
  INSOMNIA
  CONSTIPATION
  MUSCLE_PAIN
  JOINT_PAIN
  OTHER
}

enum Adherence {
  ALWAYS
  OFTEN
  SOMETIMES
  NEVER
  RARELY
}

enum Mood {
  HAPPY
  SAD
  ANGRY
  ANXIOUS
  STRESSED
  NEUTRAL
}

enum Sleep {
  GOOD
  BAD
  AVERAGE
}

enum Stress {
  NOT_STRESSED
  SLIGHTLY
  MODERATELY
  HIGHLY
  EXTREMELY
}

model User {
  id        String  @id @default(cuid()) @map("_id")
  clerkId   String  @unique
  email     String  @unique
  firstName String
  lastName  String
  lastLogin DateTime?
  image     String?
  isAdmin   Boolean @default(false) // 0 for regular users, 1 for admin users
  isPremium Boolean @default(false) // 0 for free users, 1 for premium users
  mentalHealthScore Int @default(0) // Score from 0 to 100

  // profession    String?
  age           Int?
  height        Int?
  weight        Int?
  gender        String?
  bloodGroup    String?
  medicalIssues String?

  stripeCustomerId String? @map(name: "stripe_customer_id")
  stripeInvoiceId  String? @map(name: "stripe_invoice_id")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  symptoms       Symptom[]
  medications    Medication[]
  mentalwellness MentalWellness[]
  messages       Message[]
  billings       Billing[]
}

// step 2
model Symptom {
  id        String      @id @default(cuid()) @map("_id")
  userId    String
  name      SymptomName // here i want if if the user selects other then the predefined symptoms then he can enter his own symptom
  intensity Int // Intensity level from 1 to 10
  frequency Frequency //how often the symptom occurs
  loggedAt  DateTime?   @default(now()) // When the symptom was logged

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// step 3
model Medication {
  id        String    @id @default(cuid()) @map("_id")
  userId    String
  name      String // Name of the medication
  dosage    String // Dosage of the medication
  purpose   String? // Purpose of the medication
  frequency Frequency // Frequency of the medication
  adherence Adherence // Whether the user is adhering to the medication
  startDate DateTime? // When the medication was started

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// step 4
model MentalWellness {
  id        String  @id @default(cuid()) @map("_id")
  userId    String
  mood      Mood
  happiness Int
  sleep     Sleep
  stress    Stress
  anxiety   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// chat
model Message {
  id        String   @id @default(cuid()) @map("_id")
  role      Role
  userId    String
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Billing {
  id          String   @id @default(cuid())
  userId      String
  packageType String   // "basic", "premium", "enterprise"
  amount      Float
  receiptUrl  String
  status      String   @default("pending") // "pending", "approved", "rejected"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
model Blog {
  id          String   @id @default(cuid()) @map("_id") // Unique identifier for each blog
  name        String   // Name of the blog
  url         String   @unique // Unique URL for the blog (e.g., a slug or permalink)
  image       String   // Image associated with the blog (URL to image)
  description String   // Description of the blog content

  createdAt   DateTime @default(now()) // When the blog was created
  updatedAt   DateTime @updatedAt      // Automatically updated when modified
}
// Book model
model Book {
  id          String   @id @default(cuid()) @map("_id")
  title       String   // Title of the book
  author      String   // Author of the book
  url         String   @unique // URL link to the book or its reference
  description String   // Description of the book
  image       String   // Image URL for the book cover
  createdAt   DateTime @default(now()) // When the book was added
  updatedAt   DateTime @updatedAt      // Auto-updates when modified
}

model YouTubeVideo {
  id          String   @id @default(cuid()) @map("_id")
  title       String   // Title of the video
  url         String   @unique // URL to the YouTube video
  description String   // Description of the video
  thumbnail   String   // Thumbnail URL for the video
  createdAt   DateTime @default(now()) // When the video was added
  updatedAt   DateTime @updatedAt      // Auto-updates when modified
}
model TechNews {
  id          String   @id @default(cuid()) @map("_id")
  name        String   // Name of the tech news (e.g., Yoga News)
  url         String   @unique // URL to the full article
  gif         String   // GIF related to the tech news
  
  createdAt   DateTime @default(now()) // When the news was added
  updatedAt   DateTime @updatedAt      // Auto-updates when modified
}
